{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": false,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "forceConsistentCasingInFileNames": true,
        "exactOptionalPropertyTypes": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "types": [],
        "typeRoots": ["./src/types"]
    },
    "include": [
        "*.config.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        ".next/types/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "build",
        "out",
        ".next",
        ".turbo",
        ".cache",
        ".git",
        "coverage",
        "logs",
        "**/*.test.ts",
        "**/*.spec.ts",
        "**/__tests__",
        "**/.*/"
    ]
}
