{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/activity/*": [
        "./src/features/activity/*"
      ],
      "@/cards/*": [
        "./src/features/cards/*"
      ],
      "@/editor/*": [
        "./src/features/editor/*"
      ],
      "@/export/*": [
        "./src/features/export/*"
      ],
      "@/gemini/*": [
        "./src/features/gemini/*"
      ],
      "@/notes/*": [
        "./src/features/notes/*"
      ],
      "@/user/*": [
        "./src/features/user/*"
      ]
    },
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "*.config.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
